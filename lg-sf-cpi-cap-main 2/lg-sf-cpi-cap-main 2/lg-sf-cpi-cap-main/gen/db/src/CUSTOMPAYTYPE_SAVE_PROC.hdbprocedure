PROCEDURE CUSTOMPAYTYPE_SAVE_PROC (
    IN  I_TABLE TABLE(MDFSYSTEMRECORDID NVARCHAR(128),
                     COUNTRYCODE NVARCHAR(128),
                     EXTERNALCODE NVARCHAR(128),
                     CUDKEY NVARCHAR(1),
                     RECORD NCLOB              
    ),
    OUT O_TABLE TABLE(MDFSYSTEMRECORDID NVARCHAR(128),
                     COUNTRYCODE NVARCHAR(128),
                     EXTERNALCODE NVARCHAR(128),
                     CUDKEY NVARCHAR(1)            
    )
    
)
LANGUAGE SQLSCRIPT
SQL SECURITY INVOKER 

AS
BEGIN

    DECLARE v_cnt BIGINT;

    SELECT COUNT(*)
    INTO   v_cnt
    FROM   :I_TABLE
    ;

    O_TABLE_NEW =   SELECT  A.EXTERNALCODE
                        ,A.MDFSYSTEMRECORDID
                        ,A.COUNTRYCODE
                        ,A.CUDKEY
                        ,A.RECORD
                FROM    :I_TABLE A
                LEFT OUTER JOIN CUSTOMPAYTYPE B
                ON A.MDFSYSTEMRECORDID = B.MDFSYSTEMRECORDID
                AND A.COUNTRYCODE = B.COUNTRYCODE
                WHERE B.MDFSYSTEMRECORDID IS NULL
                WITH HINT (NO_INLINE)
                ;

    O_TABLE_OLD =   SELECT  A.EXTERNALCODE
                        ,A.MDFSYSTEMRECORDID
                        ,A.COUNTRYCODE
                        ,A.CUDKEY
                        ,A.RECORD
                FROM    :I_TABLE A
                INNER JOIN CUSTOMPAYTYPE B
                ON A.MDFSYSTEMRECORDID = B.MDFSYSTEMRECORDID  
                AND A.COUNTRYCODE = B.COUNTRYCODE    
                WITH HINT (NO_INLINE)
                ;

    INSERT INTO CUSTOMPAYTYPE(MDFSYSTEMRECORDID,COUNTRYCODE,EXTERNALCODE,CUDKEY,RECORD,CREATEDDATETIME,LASTMODIFIEDDATETIME,CREATEDBY,LASTMODIFIEDBY) 
    SELECT MDFSYSTEMRECORDID,COUNTRYCODE,EXTERNALCODE,CUDKEY,RECORD,CURRENT_TIMESTAMP,CURRENT_TIMESTAMP,CURRENT_USER,CURRENT_USER FROM :O_TABLE_NEW;
    

	IF NOT IS_EMPTY(:O_TABLE_OLD) THEN
        MERGE INTO CUSTOMPAYTYPE A USING :O_TABLE_OLD B 
            ON A.MDFSYSTEMRECORDID = B.MDFSYSTEMRECORDID  
            AND A.COUNTRYCODE = B.COUNTRYCODE    
        WHEN MATCHED THEN UPDATE SET A.EXTERNALCODE = B.EXTERNALCODE, A.RECORD = B.RECORD, A.CUDKEY = B.CUDKEY, A.LASTMODIFIEDDATETIME = CURRENT_TIMESTAMP, A.LASTMODIFIEDBY = CURRENT_USER
        ;
    END IF;

    O_TABLE =  SELECT  MDFSYSTEMRECORDID 
                        ,COUNTRYCODE
                        ,EXTERNALCODE
                        ,CUDKEY
                FROM    :O_TABLE_OLD
               UNION ALL
               SELECT  MDFSYSTEMRECORDID
                        ,COUNTRYCODE
                        ,EXTERNALCODE 
                        ,CUDKEY
                FROM    :O_TABLE_NEW 
            ;                
END