{
    "name": "lgHanaOdata",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^5",
        "@sap/hdbext": "^7.5.0",
        "express": "^4",
        "hdb": "^0.18.3",
        "sap-hdbext-promisfied": "^2.202201.1"
    },
    "scripts": {
        "start": "cds run"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "requires": {
            "db": {
                "kind": "hana"
            },
            "uaa": {
                "kind": "xsuaa",
                "credentials": {}
            },
            "auth": {
                "kind": "basic-auth",
                "users": {
                  "cpi_integration": { 
                    "password": "", 
                    "roles": [ "admin","authenticated-user" ]
                  }
                }
              }
        },
        "hana": {
            "deploy-format": "hdbtable"
        }
    },
    "devDependencies": {
        "@sap/hdi-deploy": "^4.2.3"
    }
}
